<!DOCTYPE html>
<html>
<head>
<title>Login</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="d-flex justify-content-center align-items-center vh-100">

<div class="card p-4" style="width:300px">
  <h4 class="mb-3">Login</h4>
  <input id="username" class="form-control mb-2" placeholder="Username">
  <input id="password" type="password" class="form-control mb-3" placeholder="Password">
  <button class="btn btn-primary w-100" onclick="login()">Login</button>
</div>

<script>
const API = "https://script.google.com/macros/s/AKfycbwjEF8l1CVDc96ZTZmnB0CICfJLaQBZ-N2TJDhIp5fZejgSk1l2RncOT1Yt9aSw9sIipQ/exec";

function login(){
  fetch(API,{
    method:"POST",
    body:JSON.stringify({
      action:"login",
      username:username.value,
      password:password.value
    })
  })
  .then(r=>r.json())
  .then(res=>{
    if(res.status){
      localStorage.setItem("user",JSON.stringify(res.user));
      location.href="stc.html"; // your members page
    }else{
      alert(res.message);
    }
  });
}
</script>

</body>
</html>
